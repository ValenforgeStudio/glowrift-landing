{% extends "layouts/base.njk" %}

{% block content %}
<section class="max-w-md mx-auto px-4 py-12 bg-white dark:bg-gray-900 text-gray-900 dark:text-white rounded-lg shadow">
  <h1 class="text-3xl font-display font-bold mb-6 text-center">Login to Glowrift</h1>

  <form class="space-y-6">
    <div>
      <label for="email" class="block text-sm font-medium mb-1">Email</label>
      <input type="email" id="email" name="email" class="w-full px-4 py-2 rounded bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-sunset" required>
    </div>

    <div>
      <label for="password" class="block text-sm font-medium mb-1">Password</label>
      <input type="password" id="password" name="password" class="w-full px-4 py-2 rounded bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-sunset" required>
    </div>

    <div class="flex items-center justify-between">
      <label class="flex items-center space-x-2">
        <input type="checkbox" class="form-checkbox rounded text-sunset">
        <span class="text-sm">Remember me</span>
      </label>
      <a href="#" class="text-sm text-sunset hover:underline">Forgot password?</a>
    </div>

    <button type="submit" class="w-full py-2 px-4 rounded bg-sunset text-white font-semibold hover:bg-sunset-dark transition">Login</button>
  </form>
</section>
{% endblock %}