{% extends "layouts/base.njk" %}

{% block content %}
<div class="with-header-offset px-2">
  <section class="glowrift-card max-w-3xl mx-auto mt-12">
    <h1 class="text-3xl font-display font-bold mb-6 text-center">Login to Glowrift</h1>

    <!-- Email/Password Login -->
    <form id="login-form" class="space-y-6">
      <div>
        <label for="email" class="block text-sm font-medium mb-1">Email</label>
        <input type="email" id="email" name="email" class="w-full px-4 py-2 rounded bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-sunset" required>
      </div>

      <div>
        <label for="password" class="block text-sm font-medium mb-1">Password</label>
        <input type="password" id="password" name="password" class="w-full px-4 py-2 rounded bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-sunset" required>
      </div>

      <button type="submit" class="w-full py-2 px-4 rounded bg-sunset text-white font-semibold hover:bg-sunset-dark transition">
        Login with Email
      </button>
    </form>

    <!-- Divider -->
    <div class="my-6 text-center text-sm text-gray-500">or</div>

    <!-- Google Login -->
    <div class="text-center">
      <button id="login-btn" class="px-6 py-3 bg-sunset text-white font-semibold rounded hover:bg-sunset-dark transition">
        Login with Google
      </button>
    </div>

    <div class="text-center mt-6">
      <button id="logout-btn" class="px-6 py-2 bg-gray-600 text-white font-semibold rounded hover:bg-gray-700 transition hidden">
        Logout
      </button>
    </div>

    <div id="gated" class="mt-8 hidden text-center text-green-600 font-semibold">
      You are logged in! ðŸŽ‰
    </div>
  </section>
</div>
{% endblock %}
