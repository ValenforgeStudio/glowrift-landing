<!-- Unified Calendar Modal Container -->
<div id="calendar-modal-wrapper" class="fixed inset-0 z-[100] flex items-center justify-center hidden">
  <!-- Backdrop -->
  <div
    id="calendar-modal-backdrop"
    class="absolute inset-0 bg-black bg-opacity-60"
    onclick="closeCalendarModal()">
  </div>

  <!-- Modal Content -->
  <div
    id="calendar-modal"
    class="glowrift-modal w-11/12 max-w-lg z-[110]"
  >
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Explore by Month</h2>
      <button
        onclick="closeCalendarModal()"
        aria-label="Close calendar"
        class="text-2xl text-gray-400 hover:text-gray-700 dark:text-white dark:hover:text-glowrift-primary transition"
      >
        &times;
      </button>
    </div>

    <div class="grid grid-cols-3 gap-4">
      {% for month in "January February March April May June July August September October November December".split(" ") %}
      <button
  onclick="selectMonth('{{ month | lower }}')"
  class="p-4 rounded border border-gray-200 dark:border-gray-700 
         bg-gray-100 dark:bg-gray-800 
         text-gray-800 dark:text-gray-100 
         hover:bg-orange-100 dark:hover:bg-orange-500 
         hover:text-orange-800 dark:hover:text-white 
         transition font-medium shadow-sm"
>
  {{ month }}
</button>

      {% endfor %}
    </div>
  </div>
</div>
