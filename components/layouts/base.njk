<!-- components/layouts/base.njk -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Glowrift</title>
  <link rel="icon" href="/assets/images/favicon.ico" />
  <link rel="stylesheet" href="/dist/styles.css" />
</head>
<body class="font-sans text-gray-900 bg-white">
  <header class="p-4 shadow-md">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <a href="/" class="flex items-center space-x-2">
  <img src="assets\images\Glowrift_Logo.png" alt="Glowrift logo" class="h-40 w-auto" />
</a>
      <nav class="space-x-4">
        <a href="/" class="hover:underline">Home</a>
        <a href="/halloween" class="hover:underline">Halloween</a>
      </nav>
    </div>
  </header>

  <main class="max-w-6xl mx-auto p-4">
    {% block content %}{% endblock %}
  </main>

  <footer class="text-center p-4 mt-10 text-sm text-gray-500">
   &copy; 2025 Glowrift. All rights reserved.
  </footer>
</body>
</html>